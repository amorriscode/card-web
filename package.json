{
  "name": "card-web-app",
  "license": "BSD-3-Clause",
  "repository": "jkomoros/card-web",
  "type": "module",
  "scripts": {
    "start": "gulp inject-config && npm run serve",
    "serve": "tsc --watch --preserveWatchOutput & wds --node-resolve --port=8081",
    "serve:clean": "npm install && npm run build:clean && gulp inject-config && npm run serve",
    "build": "npm run build:clean && npm run build:typescript && npm run build:rollup && npm run build:seo && npm run build:service-worker",
    "build:clean": "npm run build:clean:build && npm run build:clean:typescript",
    "build:clean:build": "rm -rf build/",
    "build:clean:typescript": "find src -name '*.map' -type f -delete && find src -name '*.js' -type f -delete && find src -name '*.d.ts' -type f -delete",
    "build:typescript": "tsc",
    "build:rollup": "rollup -c",
    "build:seo": "npx ts-node-esm tools/seo.ts",
    "build:service-worker": "workbox generateSW workbox-config.cjs",
    "test": "npm run test:security && npm run test:url && npm run test:contenteditable && npm run test:references && npm run test:fingerprint && npm run test:ngram && npm run test:objpath",
    "test:security": "gulp inject-config && firebase emulators:exec --only firestore 'npm run test:security-impl'",
    "test:security-impl": "mocha test/security --timeout=10000",
    "test:url": "mocha -r esm test/url --timeout=10000",
    "test:ngram": "mocha -r esm test/ngram --timeout=10000",
    "test:contenteditable": "mocha -r esm test/contenteditable --timeout=10000",
    "test:references": "mocha -r esm test/references --timeout=10000",
    "test:fingerprint": "mocha -r esm test/fingerprint --timeout=10000",
    "test:objpath": "mocha -r esm test/objpath --timeout=10000"
  },
  "dependencies": {
    "@polymer/polymer": "^3.4.1",
    "@types/d3": "^7.4.0",
    "@types/express-serve-static-core": "^4.17.21",
    "@webcomponents/webcomponentsjs": "^2.4.4",
    "d3": "^6.7.0",
    "dompurify": "^2.1.1",
    "firebase": "^9.8.1",
    "lit": "^2.2.4",
    "openai": "^3.2.1",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "reselect-map": "^1.0.6",
    "snarkdown": "^2.0.0"
  },
  "devDependencies": {
    "@firebase/testing": "^0.19.6",
    "@polymer/test-fixture": "^4.0.2",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/dompurify": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@web/dev-server": "^0.1.31",
    "@web/dev-server-rollup": "^0.3.17",
    "axe-core": "^3.5.5",
    "chai": "^4.1.2",
    "del": "^3.0.0",
    "eslint": "^8.17.0",
    "eslint-plugin-mocha": "^6.3.0",
    "esm": "^3.2.25",
    "gulp": "^4.0.2",
    "gulp-inject-string": "^1.1.2",
    "gulp-real-favicon": "^0.3.2",
    "gulp-rename": "^1.4.0",
    "gulp-run-command": "0.0.9",
    "jsdom": "^16.7.0",
    "mocha": "^10.0.0",
    "pixelmatch": "^4.0.2",
    "prettier": "^2.1.2",
    "prompts": "^2.3.2",
    "puppeteer": "^1.20.0",
    "rollup": "^2.74.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "striptags": "^3.2.0",
    "ts-lit-plugin": "^1.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.2",
    "wct-mocha": "^1.1.0",
    "workbox-cli": "^6.5.3"
  }
}
